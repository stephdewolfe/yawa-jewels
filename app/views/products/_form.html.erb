<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :quantity %>
    <%= f.input :description, as: :trix_editor %>
    <%= f.association :category %>
    <%= f.association :brand %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
